<tr>
  <td> <%= product_suggest.id %> </td>
  <td> <%= product_suggest.name %> </td>
  <td> <%= product_suggest.price %> </td>
  <td> <%= product_suggest.description %> </td>
  <td> <%= image_tag product_suggest.image, class: "image" %></td>
  <td> <%= product_suggest.status %> </td>
  <% if product_suggest.waiting? %>
  <td>
    <%= link_to t("product_suggests.index.edit_button"),
      edit_product_suggest_path(product_suggest),
      class:"btn btn-primary" %>
  </td>
  <td>
    <%= link_to t("product_suggests.index.cancel_button"), product_suggest_path(product_suggest),
      method: :delete, data: {confirm: t("product_suggests.index.delete_confirm")},
      class:"btn btn-danger" %>
  </td>
  <% else %>
  <td>
    <%= link_to t("product_suggests.index.edit_button"),
      product_suggests_path, class:"btn btn-primary", disabled: true %>
  </td>
  <td>
    <%= link_to t("product_suggests.index.cancel_button"), product_suggests_path,
      class:"btn btn-danger", disabled: true %>
  </td>
  <% end %>
</tr>
