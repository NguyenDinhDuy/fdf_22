<%= provide :title, t(".user_suggest") %>

<h1><%= t ".user_suggest" %></h1>

<div class="col-md-6 col-md-offset-3 text-center" >
  <%= link_to t(".new_button"), new_product_suggest_path,
    class: "btn btn-info" %>
</div>

<table class="table table-hover">
  <tr>
    <th><%= t ".id" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".price" %></th>
    <th><%= t ".description" %></th>
    <th><%= t ".image" %></th>
    <th><%= t ".status" %></th>
    <th><%= t ".edit_button" %></th>
    <th><%= t ".cancel_button" %></th>
  </tr>
  <%= render @product_suggests %>
</table>
<%= will_paginate @product_suggests %>
