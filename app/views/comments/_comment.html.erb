<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    <%= t(".posted",
      params: time_ago_in_words(comment.created_at)) %>
    <% if logged_in? && comment.user.current_user?(current_user) %>
      <%= link_to t(".delete"),
        product_comment_path(@product, comment), remote: true, method: :delete %>
    <% end %>
  </span>
</li>
