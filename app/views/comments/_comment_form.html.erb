<%= form_for [@product, @comment], remote: true do |f| %>
  <div class="form-group">
    <%= render "shared/error_messages", object: f.object %>
    <%= f.text_field :content,
      placeholder: t(".placeholder") %>
  </div>
  <%= f.submit t(".btn_post"),
    class: "btn btn-primary btn_post" %>
<% end %>
