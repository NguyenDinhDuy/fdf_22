<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @supports.newest_products.each_with_index do |product, index| %>
      <div class="item <%= 'active' if index == 0 %>">
        <%= link_to product_path(product) do %>
          <div class="col-sm-7">
            <img class="img-responsive" src="<%= product.image.url %>">
          </div>
        <% end %>
        <div class="col-sm-5">
          <div class="carousel-caption">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="controllers col-sm-7 col-xs-12">
    <ol class="carousel-indicators">
      <% @supports.newest_products.each_with_index do |product, index| %>
        <li data-target="#carousel-example-generic" data-slide-to=<%= index %>
          class="<%= 'active' if index == 0 %>"></li>
      <% end %>
    </ol>
  </div>
</div>
