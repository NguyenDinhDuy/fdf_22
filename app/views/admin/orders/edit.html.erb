<% provide :title, t(".control") %>

<h1><%= t ".control" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @order] do |f| %>
      <%= f.label :status %>
      <%= f.select :status, options_for_select(@order_statuses),
        class: "form-control" %><br>
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
