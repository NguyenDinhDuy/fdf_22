<% provide :title, t("views.admin.user.index.title") %>
<h1><%= t "views.admin.user.index.all_users" %></h1>

<table class="table table-hover">
  <tr>
    <th><%= t "views.admin.user.index.stt" %></th>
    <th><%= t "views.admin.user.index.name" %></th>
    <th><%= t "views.admin.user.index.email" %></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td> <%= user.id %> </td>
      <td> <%= link_to user.name, user %> </td>
      <td> <%= user.email %> </td>
      <td>
        <span>
          <%= link_to t("views.admin.user.index.delete"),
            admin_user_url(user), method: :delete,
            data: {confirm: t("views.admin.user.index.delete_confirm")},
            class:"btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
